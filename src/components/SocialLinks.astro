---
import instagram from "../icons/instagram.svg";
import twitter from "../icons/twitter.svg";
import linkedin from "../icons/linkedin.svg";
import youtube from "../icons/youtube.svg";
import WhatsappButton from "./WhatsappButton.astro";
---

<div class="home-content fixed left-2 bottom-12 md:bottom-2 z-10">
	<nav class="home-social h-full flex flex-col gap-1">
		<a href="#" target="_blank" class="home-social-link">
			<img
				src={instagram.src}
				alt={`${instagram}link`}
				class="size-6 opacity-75"
			/>
		</a>
		<a href="#" target="_blank" class="home-social-link">
			<img
				src={twitter.src}
				alt={`${twitter} link`}
				class="size-6 opacity-75"
			/>
		</a>
		<a href="#" target="_blank" class="home-social-link">
			<img
				src={linkedin.src}
				alt={`${linkedin} link`}
				class="size-6 opacity-75"
			/>
		</a>
		<a href="#" target="_blank" class="home-social-link">
			<img
				src={youtube.src}
				alt={`${youtube} link`}
				class="size-6 opacity-75"
			/>
		</a>
	</nav>
	<WhatsappButton />
</div>

<style>
	.home-social-link {
		background-color: rgba(255, 255, 255, 0.3);
		padding: 5px;
		border-radius: 100%;
	}
	.home-social-link:hover {
		background-color: rgba(255, 255, 255, 0.5);
		transform: scale(1.05);
		transition: all 0.3s ease-in-out;
	}
</style>
