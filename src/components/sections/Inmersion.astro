---
import Fader from "../Fader.astro";
import { BlurVideo } from "../../components/BlurVideo/BlurVideo";
import img from "../../img/plan.jpg";
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";
import photo1 from "../../img/mansion_1.jpg";
import photo2 from "../../img/mansion_4.jpg";
import Container from "../Container.astro";

const HOME1 = {
	title1: "Casa en el bosque",
	date1: "2021",
	construction1: "Casa",
	description1:
		"Casa en el bosque, con un diseño moderno y minimalista, con una vista panorámica al lago.",
};
const { title1, date1, construction1, description1 } = HOME1;
---

<Layout title="Inmersión en Lot Arquitectos">
	<section
		class="min-h-screen h-full w-full text-center overflow-hidden relative px-4 md:px-32"
		data-header-color="black"
		id="inmersion">
		<h1
			class="text-white text-center text-4xl lg:text-[5.5vw] font-black py-20 drop-shadow-md"
			id="inmersion">
			Sumergite en Lot Arquitectos{" "}
		</h1>
		<div class="flex flex-col justify-start">
			<article
				class="flex flex-col items-start justify-start md:max-w-[33%] text-start bg-black/10 p-5 rounded-3xl relative shadow-md">
				<Image
					src={photo1}
					alt="house picture"
					class="rounded-2xl z-20 aspect-video "
				/>
				<h3
					class="text-gh3 pt-2 pb-1 font-[800] tracking-tight bg-clip-text">
					{title1}
				</h3><div class="mt-3">{date1}</div><div class="mt-4">
					<div
						class="inline-block rounded-md px-3 py-2 uppercase tracking-widest text-xs font-semibold"
						style="background:#f0f0f0;color:#000">
						{construction1}
					</div>
				</div><div class="font-light text-gf3 mt-5 pb-5">
					{description1}
				</div>
			</article>
		</div>
		<BlurVideo client:visible />
		<div class="flex justify-end">
			<Image
				src={photo2}
				alt="house picture"
				class="rounded-3xl md:max-w-[33%] z-20 aspect-video"
			/>
		</div>
		<!-- <Fader /> -->
		<Image
			class="absolute top-0 left-0 h-full w-screen object-cover z-10 opacity-10"
			src={img}
			alt="Image of drone"
		/>
	</section>
</Layout>

