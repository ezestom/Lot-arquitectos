<style>
	section {
		background-image: url("../../img/home-4.jpg");
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
		border-radius: 1rem;
		top: 0;
		left: 0;
		margin: 5rem 0;
		padding: 5rem 0;
	}
	hr {
		/* create a amazin gr gradiente */
		border: 0;
		height: 0.25rem;
		background-image: linear-gradient(
			to right,
			rgba(255, 255, 255, 0),
			rgba(255, 255, 255, 1),
			rgba(255, 255, 255, 0)
		);
		width: 100%;
		margin-block: 2rem;
	}
</style>
